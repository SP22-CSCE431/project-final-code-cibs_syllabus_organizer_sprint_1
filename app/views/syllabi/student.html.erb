<h1>Welcome to Student View, <%= current_user.name %>!</h1>
<% if @student_found == nil %> 
    <%= link_to 'New Student', new_student_path %>   
<% else %>
  <p> Student Found with user_id <%= @students[0].id %> </p>
  <p> Student Found with uid <%= current_user.uid %> </p>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.tamu_major %></td>
      <td><%= student.tamu_college %></td>
    </tr>
  <% end %>
<% end %>


